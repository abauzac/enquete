<html ng-app="enquete">
    <head>
        <link rel="stylesheet" href="/bundles/fish/styles/main.css"
    </head>
    <body ng-controller="EnqueteController">
        <h1>Prototype</h1>
        <section id="titulo">
            <form>
                <label>Titulo</label>
                <input type="text" name="titulo" ng-model="filter.enquete.titulo" />
            </form>
            <ul>
                {% verbatim %}
                    <li ng-repeat="enquete in enquetes track by $index">
                        <a href="#{{enquete.id}}" ng-click="edit(enquete)">{{enquete.titulo}}</a>
                    </li>
                {% endverbatim %}
            </ul>
        </section>

        <section id="enquete">
            <form>
                <label for="titulo">TÃ­tulo</label>
                <input type="text" name="titulo" ng-model="enquete.titulo" />
            </form>

            <ng-include src="'/bundles/fish/views/perguntas.html'"></ng-include>
            <ng-include src="'/bundles/fish/views/respostas.html'"></ng-include>

            <div>
                <input type="button" value="clean" ng-click="clean(enquete)" />
                <input type="button" value="save" ng-click="save(enquete)" />
            </div>
        </section>

        <script>var BASE_URL = "{{ app.request.getBaseURL() }}/api";</script>
        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
        <script src="/bundles/fish/scripts/app.js"></script>
        <script src="/bundles/fish/scripts/models/EnqueteModel.js"></script>
        <script src="/bundles/fish/scripts/controllers/EnqueteController.js"></script>
        <script src="/bundles/fish/scripts/services/EnqueteService.js"></script>
        <script src="/bundles/fish/scripts/services/PerguntaService.js"></script>
        <script src="/bundles/fish/scripts/services/RespostaService.js"></script>
    </body>
</html>